/**index.wxss**/
.index-banner{
  height: 1000rpx;
  overflow: hidden;
}
.index-banner .bannder-image{
  height: 1000rpx;
  width:750rpx;
}
.index-total{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 120rpx;
  font-size: 12px;
  color: #777777;
  width: 100%;
  background-color: #f9f9f9;
}
.total-col{
  width: 33.33%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 80rpx;
}
.total-col.bd{
  border-left: 1rpx solid #cccccc;
  border-right: 1rpx solid #cccccc;
}
.total-col .iconfont{
  margin-right: 5rpx;
}

.list-box{
  width: 100%;
  padding-bottom: 30rpx;
}
.list-head{
  width: 100%;
  display: flex;
  color: #777777;
  flex-direction: column;
  align-items:center;
  padding-top: 20rpx;
}
.list-head-title{
  font-size: 10px;
}
.count-down{
  width: 100%;
  display: flex;
  height: 90rpx;
  flex-direction: row;
  align-items:center;
  justify-content: center;
  font-size: 14px;
}
.count-down-item{
  display: block;
  box-sizing: content-box;
  min-width: 40rpx;
  margin: 0 10rpx;
  height: 50rpx;
  line-height: 50rpx;
  border: 1rpx solid #cccccc;
  border-radius: 8rpx;
  padding: 0 15rpx;
  box-shadow: 0 0 8rpx 0 #cccccc;
}
.search-box{
  width: 100%;
  box-sizing: border-box;
  padding: 10rpx 30rpx;
}
.search-box .search-form{
  display: flex;
  flex-direction: row;
  align-items: center;
  border: 1rpx solid #cccccc;
  border-radius: 8rpx;
  width: 100%;
  height: 70rpx;
}
.search-box .search-form .search-input{
  flex: 1;
  padding: 0 20rpx;
  font-size: 14px;
  color: #777777;
}
.placeholder-class{
  color: #cccccc;
}
.search-box .search-form .search-btn{
  background-color: transparent;
  border: 0;
  box-shadow: none;
  width: 200rpx;
  color: #777777;
  line-height: 55rpx;
  border-left: 1rpx solid #cccccc;
  border-radius: 0;
  font-size: 14px;
}

/* 列表样式 */
.list-content{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 20rpx 10rpx;
}
.list-item{
  display: block;
  width: 345rpx;
  overflow: hidden;
  position: relative;
  box-shadow: 0 0 8rpx 0 #cccccc;
  margin-bottom: 20rpx;
  font-size: 0;
  line-height: 0;
}
.list-item .item-pic{
  width: 345rpx;
}
.list-item .item-tag{
  position: absolute;
  z-index: 1;
  top: 0;
  left: 0;
  height: 50rpx;
  line-height: 50rpx;
  width: auto;
  background-color: rgba(0, 0, 0, 0.5);
  color: #ffffff;
  font-size: 12px;
  padding: 0 20rpx;
  border-bottom-left-radius: 8rpx;
  border-bottom-right-radius: 8px;
}
.list-item .item-info{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 12px;
  color: #444444;
  padding: 0 10rpx;
  position: relative;
}
.list-item .item-info .star-btn{
  position: absolute;
  z-index: 1;
  top: -40rpx;
  right: 15rpx;
  display: block;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 100%;
  overflow: hidden;
  text-align: center;
  border:1rpx solid #7800ff;
  color: #7800ff;
  font-size: 14px;
  background-color: #ffffff;
}
.more-btn{
  width: 200rpx;
  background-color: #ffffff;
  border-radius: 8rpx;
  border: 1rpx solid #cccccc;
  font-size: 12px;
  color: #444444;
  padding: 0;
  text-align: center;
  box-shadow: 0 0 8rpx 0 #cccccc;
}
.rule-explain{
  width: 100%;
  font-size: 12px;
  color: #444444;
}
.rule-explain .explain-title{
  line-height: 80rpx;
  padding: 0 30rpx;
  background-color: #f5f5f5;
  border-top: 1rpx dashed #cccccc;
  font-size: 12px;
}
.rule-explain .explain-title .iconfont{
  margin-right: 8rpx;
  font-size: 14px;
}
.rule-explain .explain-content{
  padding: 20rpx;
  line-height: 1.5;
}